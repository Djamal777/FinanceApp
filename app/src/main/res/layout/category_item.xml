<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardElevation="12dp"
    android:outlineAmbientShadowColor="@color/white"
    android:outlineSpotShadowColor="@color/white"
    app:strokeWidth="2dp"
    app:strokeColor="@color/white"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/exp_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            tools:text="Продукты"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/exp_category_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/app_bar"
            android:scaleType="centerCrop"
            android:background="@drawable/gradient"
            tools:src="@drawable/ic_baseline_credit_card_24"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"/>

        <TextView
            android:id="@+id/exp_category_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            tools:text="42482 руб."
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>

        <TextView
            android:id="@+id/exp_plan_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="По плану: 2322 руб."
            android:textAlignment="center"
            android:layout_marginTop="4dp"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>